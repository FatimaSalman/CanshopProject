<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.project.creativly.canshopproject.manager.CustomTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:animationCache="false"
        android:elevation="10dp"
        android:minWidth="0dp"
        android:textAllCaps="false"
        app:layout_scrollFlags="scroll|enterAlways"
        app:tabBackground="@color/colorWhite"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/colorStart"
        app:tabIndicatorHeight="3dp"
        app:tabMaxWidth="0dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorStart"
        app:tabTextAppearance="@style/TextAppearance"
        app:tabTextColor="@color/colorEnd"
        tools:targetApi="lollipop" />


    <com.booking.rtlviewpager.RtlViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabs"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</RelativeLayout>
